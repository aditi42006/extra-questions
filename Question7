mysql> use Student;
Database changed
mysql> create table marks (
    -> ID int primary key,
    -> score int
    -> );
Query OK, 0 rows affected (0.954 sec)

mysql> insert into marks values
    ->     (111, 35),
    ->      (112, 55),
    ->      (113, 65),
    ->      (114, 85),
    ->     (115, 75),
    ->      (116, 40),
    ->      (117, 90);
Query OK, 7 rows affected (0.716 sec)
Records: 7  Duplicates: 0  Warnings: 0

mysql>  select ID,
    ->         score,
    ->            case
    ->              when score < 40 then 'F'
    ->              when score >= 40 and score < 60 then 'C'
    ->              when score >= 60 and score < 80 then 'B'
    ->               when score >= 80 then 'A'
    ->           end as grade
    ->      from marks;
+-----+-------+-------+
| ID  | score | grade |
