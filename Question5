mysql> create database A;
Query OK, 1 row affected (0.785 sec)

mysql> use A;
Database changed
mysql> create table department(
    -> dept_name varchar(20) primary key,
    ->  building varchar(20),
    -> budget numeric(12,2)
    -> );
Query OK, 0 rows affected (1.018 sec)

mysql> create table instructor(
    ->    ID int primary key,
    ->  name varchar(30),
    -> dept_name varchar(20),
    ->  salary numeric(10,2),
    -> foreign key (dept_name) references department(dept_name)
    -> );
Query OK, 0 rows affected (1.100 sec)

mysql> create table course(course_id varchar(10) primary key,title varchar(50),dept_name varchar(20), credits int,foreign key (dept_name) references department(dept_name));
Query OK, 0 rows affected (1.154 sec)

mysql> create table section(course_id varchar(10),sec_id varchar(5),semester varchar(10),year int,primary key(course_id, sec_id, semester, year),foreign key(course_id) references course(course_id));
Query OK, 0 rows affected (1.020 sec)

mysql> create table student( ID int primary key,name varchar(30),dept_name varchar(20),tot_cred int,foreign key (dept_name) references department(dept_name));
Query OK, 0 rows affected (1.085 sec)

