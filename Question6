mysql> use demo;
Database changed
mysql> create table Cricket_play (
    ->         p_id int primary key,
    ->          Name varchar(30),
    ->          Address varchar(50)
    ->     );
Query OK, 0 rows affected (0.990 sec)

mysql> create table Matches (
    ->          Match_code int primary key,
    ->       match_date date,
    ->        match_place varchar(50)
    ->      );
Query OK, 0 rows affected (0.926 sec)

mysql> create table Score (
    ->         p_id int,
    ->        match_code int,
    ->        score int,
    ->          primary key(p_id, match_code),
    ->         foreign key (p_id) references Cricket_play(p_id),
    ->         foreign key (match_code) references Matches(Match_code)
    ->     );
Query OK, 0 rows affected (1.183 sec)

