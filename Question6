mysql> select c.Name, m.match_date, m.match_place, s.score
    -> ^C
mysql> select c.Name, m.match_date, m.match_place, s.score
    ->  from Cricket_play c
    -> join Score s on c.p_id = s.p_id
    -> join Matches m on s.match_code = m.Match_code;
